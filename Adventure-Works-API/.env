# Base de datos SQLite
DATABASE_URL="file:./dev.db"

# ---- Firebase Admin (Service Account) ----
# Ve a Firebase Console → Project settings → Service accounts → Generate new private key.
# Coloca los valores en variables de entorno (NO subas la key al repo).
FIREBASE_PROJECT_ID=adventureworks-demo
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@adventureworks-demo.iam.gserviceaccount.com
# OJO: la clave privada debe tener los saltos de línea escapados como \n
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nABCDEF...==\n-----END PRIVATE KEY-----\n"

# CORS (frontend)
CORS_ORIGIN=http://localhost:5173
PORT=4000
